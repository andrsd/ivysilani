<document>
    <stackTemplate>
        <collectionList>
            <carousel>
                <section>
                    {{#each tipsMain }}
                    <lockup data-href-page="programme-details" data-href-page-options="{{toJSON this }}">
                        <img src="{{ fullImageURL imageURL }}" class="tile-wide" />
                        <overlay>
                          <title>{{ title }}</title>
                        </overlay>
                    </lockup>
                    {{/each}}
                </section>
            </carousel>
            <shelf>
                <header>
                  <title>Nejsledovanější videa dne</title>
                </header>
                <section>
                    {{#each tipsToday }}
                    <lockup data-href-page="programme-details" data-href-page-options="{{toJSON this }}">
                        <img class="tile" src="{{ fullImageURL imageURL }}"/>
                        <title>{{ title }}</title>
                    </lockup>
                    {{/each}}
                </section>
            </shelf>
            <shelf>
                <header>
                  <title>Nejsledovanější videa týdne</title>
                </header>
                <section>
                    {{#each tipsWeek }}
                    <lockup data-href-page="programme-details" data-href-page-options="{{toJSON this }}">
                        <img class="tile" src="{{ fullImageURL imageURL }}"/>
                        <title>{{ title }}</title>
                    </lockup>
                    {{/each}}
                </section>
            </shelf>
            <shelf>
                <header>
                  <title>Nepřehlédněte</title>
                </header>
                <section>
                    {{#each tipsNote }}
                    <lockup data-href-page="programme-details" data-href-page-options="{{toJSON this }}">
                        <img class="tile" src="{{ fullImageURL imageURL }}"/>
                        <title>{{ title }}</title>
                    </lockup>
                    {{/each}}
                </section>
            </shelf>
            <shelf>
                <header>
                  <title>Z archivu</title>
                </header>
                <section>
                    {{#each tipsArchive }}
                    <lockup data-href-page="programme-details" data-href-page-options="{{toJSON this }}">
                        <img class="tile" src="{{ fullImageURL imageURL }}"/>
                        <title>{{ title }}</title>
                    </lockup>
                    {{/each}}
                </section>
            </shelf>
            <shelf>
                <header>
                  <title>Ostatní právě sledují</title>
                </header>
                <section>
                    {{#each tipsWatching }}
                    <lockup data-href-page="programme-details" data-href-page-options="{{toJSON this }}">
                        <img class="tile" src="{{ fullImageURL imageURL }}"/>
                        <title>{{ title }}</title>
                    </lockup>
                    {{/each}}
                </section>
            </shelf>
            <shelf>
              <header>
                <title>Televizní program</title>
              </header>
              <section>
                {{#each schedule }}
                <lockup data-href-page="dates-date" data-href-page-options="{{toJSON this }}">
                  <img src="{{ asset_url 'img/tv.png' }}" style="width:225; height:135;"/>
                  <title>{{ short_title }}</title>
                </lockup>
                {{/each}}
              </section>
            </shelf>
            <shelf>
              <section>
                  <header>
                    <title>Žánry</title>
                  </header>
                  {{#each genres }}
                  <lockup data-href-page="genre-programme-list" data-href-page-options="{{toJSON this }}">
                      <img src="" style="width:320; height:75"/>
                      <overlay style="tv-position: footer; tv-align: left; padding: 0 0 15 30">
                        <title>{{ title }}</title>
                      </overlay>
                  </lockup>
                  {{/each}}
              </section>
            </shelf>
            <shelf>
                <section>
                    <header>
                      <title>Pořady podle abecedy</title>
                    </header>
                    {{#each letters }}
                    <lockup data-href-page="alphabet-letter" data-href-page-options="{{toJSON this }}">
                        <img src="{{{asset_url poster_path}}}" style="width:100; height:100;"/>
                    </lockup>
                    {{/each}}
                </section>
            </shelf>
        </collectionList>
    </stackTemplate>
</document>
